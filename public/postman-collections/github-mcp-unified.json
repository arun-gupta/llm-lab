          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": 4,\n  \"method\": \"tools/call\",\n  \"params\": {\n    \"name\": \"search_issues\",\n    \"arguments\": {\n      \"query\": \"repo:{{repo_owner}}/{{repo_name}} is:issue\",\n      \"perPage\": 10\n    }\n  }\n}"
        },
